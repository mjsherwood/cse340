<h1><%= title %></h1>
<% if(typeof errors !== 'undefined' && !errors.isEmpty()) { %>
    <% errors.array().forEach(function(error) { %>
        <p><%= error.msg %></p>
    <% }) %>
<% } %>
<h2>Account Update</h2>
<form class="site-form" action="/account/update/" method="post">
    <fieldset>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        <label for="firstname">First Name:</label>
        <input type="text" name="account_firstname" minlength="1" maxlength="30" id="firstname"  required value="<%= accountData.account_firstname %>">
        <label for="lastname">Last Name:</label>
        <input type="text" name="account_lastname" minlength="1" maxlength="30" id="lastname"  required value="<%= accountData.account_lastname %>">
        <label for="email">Email:</label>
        <input type="email" name="account_email" id="account_email" required value="<%= accountData.account_email %>">
    </fieldset>
    <button id="updateButton" type="submit">Update Account</button>
</form>
<h2>Change Password</h2>
<p>By entering a new password, your current password will be changed. Password must be at least 8 characters and contain at least one number and one special character.</p>
<form class="site-form" action="/account/update/password/" method="post">
        <fieldset>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        <label for="account_password">New Password:</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9]).{12,}$">
    </fieldset>
    <button id="passwordButton" type="submit">Update Password</button>
</form>