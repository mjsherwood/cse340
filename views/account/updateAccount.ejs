<h1><%= title %></h1>
<%- messages() %>
<h2>Account Update</h2>
<form class="site-form" action="/account/update/" method="post">
    <fieldset>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        <label for="firstname">First Name:</label>
        <input type="text" name="account_firstname" id="firstname"  required value="<%= accountData.account_firstname %>">
        <label for="lastname">Last Name:</label>
        <input type="text" name="account_lastname" id="lastname"  required value="<%= accountData.account_lastname %>">
        <label for="email">Email:</label>
        <input type="email" name="account_email" id="account_email" required value="<%= accountData.account_email %>">
        <input type="submit" value="Update Account">
    </fieldset>
</form>
<h2>Change Password</h2>
<p>By entering a new password, your current password will be changed. Password must be at least 8 characters and contain at least one number and one special character.</p>
<form class="site-form" action="/update/password/:id" method="post">
        <fieldset>
        <input type="hidden" name="account_id" value="<%= accountData.id %>">
        <label for="account_password">New Password:</label><br>
        <input type="password" id="password" name="account_password" required><br>
        <input type="submit" value="Change Password">
    </fieldset>
</form>