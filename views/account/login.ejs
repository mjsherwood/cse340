<div class="login-container">
    <form id="loginForm" action="/account/login" method="post" class="site-form">
        <h2>Login</h2>
        <label for="email">Email:
        <input type="email" id="email" name="account_email" value="<%= account_email %>" placeholder="Email address." required></label>
        <label for="password">Password:
        <input type="password" id="password" name="account_password" required></label>
        <button type="submit" class="login-button">LOGIN</button>
        <p>No Account? <a href="/account/register">Sign-up</a></p>
    </form>
</div>
<%- messages() %>