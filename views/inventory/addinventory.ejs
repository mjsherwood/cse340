<div class="registration-container">
    <p>All fields are required.</p>
    <form id="registerForm" action="/account/register" method="post">
        <fieldset>
            <label for="make">Make:</label>
            <input type="text" name="inv_make" id="make" required value="<%= locals.inv_make %>">
            <label for="model">Model:</label>
            <input type="text" name="inv_model" id="model" size="20" required value="<%= locals.inv_model %>">
            <label for="year">Year:</label>
            <input type="number" name="inv_year" id="year" required value="<%= locals.inv_year %>">
            <label for="description">Description</label>
            <input type="text" name="inv_description" id="description" required value="<%= locals.inv_description %>">
            <label for="image">Image URL</label>
            <input type="url" name="inv_image" id="image" required value="<%= locals.inv_image %>">
            <label for="thumbnail">Thumbnail URL</label>
            <input type="url" name="inv_thumbnail" id="thumbnail" required value="<%= locals.inv_thumbnail %>">
            <label for="price">Price:</label>
            <input type="number" name="inv_price" id="price" required value="<%= locals.inv_price %>">
            <label for="miles">Miles:</label>
            <input type="number" name="inv_miles" id="miles" required value="<%= locals.inv_miles %>">
            <label for="color">Color:</label>
            <input type="text" name="inv_color" id="color" required value="<%= locals.inv_color %>">
            <label for="classification">Classification:</label>
            <select name="classification_id" id="classification" required>
                <% classifications.forEach(function(classification) { %>
                    <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
                <% }); %>
            </select>
            <button type="submit">Add Vehicle</button>
        </fieldset>
    </form>
</div>