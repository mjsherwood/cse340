<h1>Inventory Delete</h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="delete-container">
    <p>Confirm Deletion - The deletion is permanent.</p>
    <form class="site-form" action="/inv/delete" method="post">
        <fieldset>
            <label for="make">Make:</label>
            <input type="text" readonly <% if(locals.inv_make) { %>
            value="<%= locals.inv_make %>" <% } %>>
            <label for="model">Model:</label>
            <input type="text" readonly <% if(locals.inv_model) { %>
            value="<%= locals.inv_model %>" <% } %>>  
            <label for="price">Price:</label>
            <input type="text" readonly <% if(locals.inv_price) { %>
            value="<%= locals.inv_price %>" <% } %>> 
            <label for="year">Year:</label>
            <input type="text" readonly <% if(locals.inv_price) { %>
            value="<%= locals.inv_price %>" <% } %>> 
            <button type="delete">Delete Vehicle</button>
            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
        </fieldset>
    </form>
</div>
